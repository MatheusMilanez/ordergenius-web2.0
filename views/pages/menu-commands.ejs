<!-- menu-commands.html -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/menu-commands.css">
</head>
<body>
    <div class="number_table">
        <h2>Comanda nÂ° <%= idTable %></h2>
    </div>
    <section class="grid-command-section">
        <div class="grid-command item">
            <h3>Itens</h3>
            <h3>Valor</h3>
            <h3>Quantidade</h3>
        </div>
        <div class="list-orders">
            <% if (Array.isArray(orders) && orders.length > 0) { %>
                <% orders.forEach(order => { %>
                    <ul class="grid-command price">
                        <li class="li snack"><%= order.titleProduct %></li>
                        <li class="li price">R$ <%= order.price.toFixed(2) %></li>
                        <li class="li quantity"><%= order.quantity %></li>
                    </ul>
                <% }) %>
            <% } else { %>
                <p>Nenhum pedido encontrado.</p>
            <% } %>
        </div>
    </section>
    <button type="button" id="retornarID" onclick="location.href='/'">Retornar</button>
    <script>
        const idTable = window.location.pathname.split('/')[1];
        document.getElementById('retornarID').addEventListener('click', function(){
            window.location.href = `/${idTable}`
        })
    </script>
</body>
</html>
